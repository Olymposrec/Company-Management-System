@model DepartmentModel
@section Styles{
    <link href="https://cdn.datatables.net/1.11.4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="//cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.4/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}

@if (Model.companyId != null)
{
    <div id="accordion">
        <div class="card shadow mt-5">
            <div class="card-header bg-dark">
                <a href="#collapseDepartmentCreate" class="card-link p-1" data-toggle="collapse">
                    Department Create
                </a>

            </div>
            <div id="collapseDepartmentCreate" class="collapse show">
                <div class="card-body">
                    <form asp-controller="Department" asp-action="DepartmentCreate" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-4">
                                <input class="form-control" asp-for="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-success">Add Department</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <partial name="DepartmentList" />

}
else
{
    <div class="row">
        <div class="col-12 mt-5">
            <div class="alert alert-info">
                <div class="text-center">
                    <h3>No matched companies were found. Assign yourself a company. </h3>

                    <a class="btn btn-success" href="/Admin/Users" role="button">Define Company Yourself<i class="fas fa-directions"></i> </a>
                </div>
            </div>
        </div>
    </div>
}


