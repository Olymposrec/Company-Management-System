
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="/Home/Index" class="brand-link">
        <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Company App</span>
    </a>
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->

        @if (User.Identity.IsAuthenticated)
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="~/img/avatar5.png" width="160" height="160" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <div class="font-weight-bold text-light">@User.Identity.Name</div>
                </div>
            </div>

        }
        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->

                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-industry"></i>

                                <p>
                                    Companies
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="CompanyCreate" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Add Company</p>
                                    </a>
                                </li>

                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-building"></i>
                                <p>
                                    Departments
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Department" asp-action="DepartmentCreate" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Add Department</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="DefineEmployeeToDepartment" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Add Employee To Department</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-tools"></i>
                                <p>
                                    Services
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="ServiceCreate" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Add Service</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="DefineServiceToCompanyList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Companies Services</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-users"></i>
                                <p>
                                    Users
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="ApplicationsList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Applications</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="UserRoleCreate" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Add User Role</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="UserRoleList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>User Role List</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="UserCreate" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Add User</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="UserList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>User List</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }


                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fas fa-concierge-bell"></i>
                            <p>
                                Requests
                                <i class="right fas fa-angle-left"></i>
                                <span id="requestCount" class="badge badge-info right"></span>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="RequestList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>
                                            Requests
                                        </p>
                                    </a>
                                </li>
                            }


                            @if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="Request" asp-action="RequestCreate" class="nav-link">
                                        <i class="fas fa-plus-circle"></i>
                                        <p>Make A Request</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Request" asp-action="RequestHistory" class="nav-link">
                                        <i class="fas fa-history"></i>
                                        <p>History</p>
                                    </a>
                                </li>
                            }



                        </ul>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-cog"></i>
                                <p>
                                    Settings
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Admin" asp-action="LogList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Logs</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                }



            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
