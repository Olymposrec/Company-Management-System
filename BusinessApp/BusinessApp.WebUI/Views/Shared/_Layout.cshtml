@*@using Microsoft.AspNetCore.Identity*@
@*@inject RoleManager<CommerceHub.Core.User.ApplicationRole> RoleManager*@

<!DOCTYPE html>
<html lang="en" style="height: auto;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Company App</title>
    <partial name="_LayoutHead" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="sidebar-mini  sidebar-open" style="height: auto;">
    <!-- Site wrapper -->
    <div class="wrapper">
        <div class="wrapper">
            <!-- Preloader -->
            <div class="preloader d-flex justify-content-center align-self-center">
                <img src="~/img/commercehub.png" alt="CommerceHub" width="15%" height="15%">
            </div>
        </div>
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fa fa-bars"></i></a>
                </li>
            </ul>
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Profile" class="nav-link">
                            <p>My Profile</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Logout" class="nav-link">
                            <p>Logout</p>
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Login" class="nav-link">
                            <p>Login</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Register" class="nav-link">
                            <p>Register</p>
                        </a>
                    </li>
                }
                <li class="nav-item mt-3">
                    <label id="switch" class="switch">
                        <input type="checkbox" id="toggle-theme-switch">
                        <span class="slider round"></span>
                    </label>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <partial name="_SideBar" />
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="min-height: 2488.06px;">
            <section class="content">
                <div class="container-fluid">
                    @if (TempData["message"] != null)
                    {
                        @await Html.PartialAsync("_ResultMessage", TempData.Get<AlertMessage>("message"))
                    }
                    <!-- Content Header (Page header) -->

                    @RenderBody()
                    <!-- /.content -->
                </div>
            </section>

        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 3.2.0
            </div>
        </footer>
        <!-- Control Sidebar -->
        <!-- /.control-sidebar -->
        <div id="sidebar-overlay"></div>
    </div>
    <!-- ./wrapper -->
    <partial name="_LayoutScripts" />
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>