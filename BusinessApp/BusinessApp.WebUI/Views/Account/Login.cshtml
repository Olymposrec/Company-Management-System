@model LoginModel
@{
    Layout = "_AccountLayout";
}
<div class="login-box">
    <div class="login-logo">
        <a href="~/img/AdminLTELogo.png"><b>Company</b>App</a>
    </div>
    <div class="card">
        <div class="card-body login-card-body">
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
            <p class="login-box-msg">Login Page</p>



            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group row">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-envelope"></i></span>
                        </div>
                        <input type="text" class="form-control" asp-for="Email" aria-describedby="basic-addon1">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon2"><i class="fas fa-lock"></i></span>
                        </div>
                        <input type="password" class="form-control" asp-for="Password" aria-describedby="basic-addon2">
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-4"></div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-sm btn-outline-primary btn-block">Log In</button>
                    </div>
                    <div class="col-4"></div>
                </div>
                <div class="row justify-content-center mt-2">

                    <a href="~/Account/Register" class="link-info">Don't Have An Account?'</a>
                </div>
            </form>
        </div>
    </div>
</div>