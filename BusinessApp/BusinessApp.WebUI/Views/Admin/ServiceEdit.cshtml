@model ServiceModel

<div class="card mt-5">
    <div class="card-header bg-dark">
        Service Edit
    </div>
    <div class="card-body">
        <form asp-controller="Admin" asp-action="ServiceEdit" method="post">
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group row">
                <label asp-for="ServiceName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <input class="form-control" asp-for="ServiceName" />
                    <span asp-validation-for="ServiceName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ServiceDescription"></label>
                <div class="col-sm-6">
                    <input class="form-control" asp-for="ServiceDescription" />
                </div>
            </div>
            @if (Model.Departments.Count() > 0)
            {
                <div class="input-group">
                    <label class="col-sm-2 col-form-label"> Departments</label>
                    <select name="departmentId" id="departmentId" class="custom-select col-sm-6">

                        @foreach (var department in Model.Departments)
                        {
                            if (department.Id == Model.DepartmentId)
                            {
                                <option selected value="@department.Id">@department.Name</option>
                            }
                            else
                            {
                                <option value="@department.Id">@department.Name</option>
                            }
                        }
                    </select>
                </div>
            }
            <div class="form-group row mt-2">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>