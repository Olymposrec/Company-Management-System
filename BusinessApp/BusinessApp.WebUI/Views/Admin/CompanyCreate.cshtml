@model CompanyModel
@section Styles{
    <link href="https://cdn.datatables.net/1.11.4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="//cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.4/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}

<div id="accordion">
    <div class="card shadow mt-5">
        <div class="card-header bg-dark">
            <a href="#collapseCompanyCreate" class="card-link p-1" data-toggle="collapse">
                Create Company
            </a>
        </div>
        <div id="collapseCompanyCreate" class="collapse show">
            <div class="card-body shadow">
                <form asp-controller="Admin" asp-action="CompanyCreate" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-1 col-form-label"></label>
                        <div class="col-sm-4">
                            <input class="form-control" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="TaxNumber" class="col-sm-1 col-form-label"></label>
                        <div class="col-sm-4">
                            <input class="form-control" asp-for="TaxNumber" />
                            <span asp-validation-for="TaxNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PhoneNumber" class="col-sm-1 col-form-label"></label>
                        <div class="col-sm-4">
                            <input class="form-control" asp-for="PhoneNumber" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-1 col-form-label"></label>
                        <div class="col-sm-4">
                            <input class="form-control" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-success">Save Company</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <partial name="CompanyList" />
