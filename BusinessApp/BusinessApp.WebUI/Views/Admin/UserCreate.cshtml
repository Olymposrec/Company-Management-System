@model UserModel
<div id="accordion">
    <div class="card mt-5">
        <div class="card-header bg-dark">
            <a href="#collapseCompanyCreate" class="card-link p-1" data-toggle="collapse">
                User Create
            </a>
        </div>
        <div id="collapseCompanyCreate" class="collapse show">
            <div class="card-body">
                <form asp-controller="Admin" asp-action="UserCreate" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group row">
                                <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-6">
                                    <input class="form-control" asp-for="FirstName" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-6">
                                    <input class="form-control" asp-for="LastName" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-6">
                                    <input class="form-control" asp-for="PhoneNumber" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-6">
                                    <input class="form-control" asp-for="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-6">
                                    <input class="form-control" asp-for="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-md-4">
                                    <p><b>Roles</b></p>
                                    <hr />
                                    @foreach (var role in Model.Roles)
                                    {
                                        <div class="custom-control custom-checkbox">
                                            <input type="radio" class="custom-control-input"
                                                   name="selectedRole"
                                                   asp-for="SelectedRole"
                                                   value="@role.Name"
                                                   id="@role.Name" />
                                            <label class="custom-control-label" for="@role.Name">@role.Name</label>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-2"></div>
                                <div class="col-md-4">
                                    <p><b>Companies</b></p>
                                    <hr />
                                    @foreach (var company in Model.Companies)
                                    {
                                        <div class="custom-control custom-checkbox">
                                            <input type="radio" class="custom-control-input"
                                                   name="selectedCompany"
                                                   asp-for="SelectedCompany"
                                                   value="@company.Id"
                                                   id="@company.Id" />
                                            <label class="custom-control-label" for="@company.Id">@company.Name</label>
                                        </div>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-success">Save User</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
