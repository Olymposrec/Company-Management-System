@model UserRoleModel
<div class="card mt-5 shadow">
    <div class="card-header bg-dark">
        User Role Create
    </div>
    <div class="card-body">
        <form asp-controller="Admin" asp-action="UserRoleCreate" method="post">
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-4">
                    <input class="form-control" asp-for="RoleName" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-success">Save User Role</button>
                </div>
            </div>
        </form>
    </div>
</div>